datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String              @id @unique
  name              String
  login             String
  password          String
  isAdm             Boolean
  createdAt         DateTime            @default(now())
  updatedAt         DateTime?
}

model Client {
  id                String              @id @unique
  name              String
  fone              String
  address           Address?
  loan              Loan[]             
  createdAt         DateTime            @db.DateTime2 @default(now())
  updatedAt         DateTime?           @db.DateTimeOffset
}

model Address {
  id                String              @id @unique
  street            String
  district          String
  number            String
  city              String
  client            Client?             @relation(fields: [clientId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  clientId          String              @unique
  createdAt         DateTime            @db.DateTime2 @default(now())
  updatedAt         DateTime?           @db.DateTimeOffset
}

model Loan {
  id                String              @id @unique
  value_loan        Int
  client            Client              @relation(fields: [clientId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  clientId          String               
  createdAt         DateTime            @db.DateTime2 @default(now())
  updatedAt         DateTime?           @db.DateTimeOffset
}
