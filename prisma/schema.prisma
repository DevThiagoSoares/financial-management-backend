datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @unique
  name      String
  login     String    @unique
  password  String
  isAdm     Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Client {
  id        String    @id @unique
  name      String
  fone      String
  address   Address?
  loan      Loan[]
  createdAt DateTime  @default(now()) 
  updatedAt DateTime? 
}

model Address {
  id        String    @id @unique
  street    String
  district  String
  number    String
  city      String
  client    Client?   @relation(fields: [clientId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  clientId  String    @unique
  createdAt DateTime  @default(now()) 
  updatedAt DateTime? 
}

model Loan {
  id              String    @id @unique
  payment_settled Boolean   @default(false)
  value_loan      Float
  interest_rate   Float
  rest_loan       Float
  client          Client    @relation(fields: [clientId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  clientId        String
  startDate       DateTime  
  dueDate         DateTime  
  payment         Payment[]
  createdAt       DateTime  @default(now()) 
  updatedAt       DateTime? 
}

model Payment {
  id        String    @id @unique
  value     Float
  loan      Loan      @relation(fields: [loanId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  loanId    String
  createdAt DateTime  @default(now()) 
  updatedAt DateTime? 
}
